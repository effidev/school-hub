<div class="devise">
  <div class="connection-block">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <span class="error"><%= flash[:alert] %></span><br /><br />
      <div class="field">
        <label>Email address</label><br />
        <%= f.email_field :email, autofocus: true, :class => 'input' %>
      </div>

      <div class="field">
        <%= f.label :password %><%= link_to t('devise.passwords.forgot_password'), new_password_path(resource_name), class: 'right' %><br />
        <%= f.password_field :password, autocomplete: "off", :class => 'input' %>
      </div>

      <div class="actions">
        <%= f.submit t('sign_in'), :class => 'input btn btn-green' %>
      </div>
    <% end %>
  </div>

  <div class="connection-block register">
    <span><%= t('devise.new_at') %> <%=PARAMETERS['site_name'] %>? <%= link_to t('devise.registrations.create_account'), new_registration_path(resource_name) %>.</span>
  </div>
</div>